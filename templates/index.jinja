{% block content %}
<header style="background: #0E0E0E;padding-top: 1px;padding-bottom: 59px;">
    <div class="container" style="margin-top: 3px;">
        <div class="row row-cols-sm-1 row-cols-md-2 d-xxl-flex justify-content-xxl-center">
            <div class="col d-lg-flex align-items-lg-center" style="padding: 47px;padding-top: 27px;">
                <div class="text-center d-flex flex-column align-items-center flex-sm-column flex-md-row flex-lg-row justify-content-xxl-start">
                    <div class="d-flex d-lg-flex flex-column justify-content-center align-items-center align-self-center flex-wrap align-items-sm-center justify-content-md-start align-items-md-start" style="padding: 23px;padding-top: 48px;">
                        <h1 class="d-flex justify-content-center justify-content-md-start" style="font-size: 4rem;margin-bottom: 0px;font-weight: bold;color: var(--bs-white);">Spotistats</h1>
